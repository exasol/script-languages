FROM exaudf/baseimage_benchmark

RUN DEBIAN_FRONTEND=noninteractive apt-get install -y openjdk-8-jdk && \
	echo "deb [arch=amd64] http://storage.googleapis.com/bazel-apt stable jdk1.8" | tee /etc/apt/sources.list.d/bazel.list && \
	curl https://bazel.build/bazel-release.pub.gpg | apt-key add - && \
	apt-get update && apt-get install -y bazel
RUN mkdir /exaudf_src /exaudf_src/build /exaudf

COPY src/ /exaudf_src/

RUN cd /exaudf_src/ && bash build_in_container.sh && cp -r -L bazel-bin/* /exaudf
